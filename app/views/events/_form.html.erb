<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :event_name %><br />
    <%= form.text_field :event_name %>
  </div>
  <div class="field">
    <%= form.label :event_date %><br />
    <%= form.date_select :event_date, {order: [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 5 }, {required: true} %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
